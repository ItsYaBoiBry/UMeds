<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".content.ActivityViewProfile">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/profile_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_layout"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tab_patients_item"
            style="@style/profile_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/profile_tab_normal"
            android:text="Personal Details" />

        <TextView
            android:id="@+id/tab_documents_item"
            style="@style/profile_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/profile_tab_normal"
            android:text="Documents" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_tab">

        <LinearLayout
            android:id="@+id/personal_details_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Details"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/documents_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documents"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>