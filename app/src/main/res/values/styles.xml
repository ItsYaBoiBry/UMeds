<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>
    <style name="AppThemeNoStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="navmenu_items">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="btn_logout">
        <item name="android:drawableStart">@drawable/ic_logout</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@drawable/btn_round_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>
    <style name="profile_tab_item">
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
